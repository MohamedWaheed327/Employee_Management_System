@model Employee
@{
	ViewData["Title"] = "Employee Details";
}
<h2>@Model.FullName</h2>
<div class="row">
	<div class="col-md-3">
		@if (!string.IsNullOrEmpty(Model.ProfileImagePath))
		{
			<img src="@Model.ProfileImagePath" class="img-thumbnail" alt="profile" />
		}
	</div>
	<div class="col-md-9">
		<dl class="row">
			<dt class="col-sm-3">Email</dt>
			<dd class="col-sm-9">@Model.Email</dd>
			<dt class="col-sm-3">Phone</dt>
			<dd class="col-sm-9">@Model.PhoneNumber</dd>
			<dt class="col-sm-3">Department</dt>
			<dd class="col-sm-9">@Model.department?.Name</dd>
			<dt class="col-sm-3">Job Title</dt>
			<dd class="col-sm-9">@Model.job?.Title</dd>
			<dt class="col-sm-3">Hire Date</dt>
			<dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>
			<dt class="col-sm-3">Salary</dt>
			<dd class="col-sm-9">@Model.Salary.ToString("C")</dd>
		</dl>
		<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
		<a class="btn btn-secondary" asp-action="Index">Back</a>
	</div>
</div>
