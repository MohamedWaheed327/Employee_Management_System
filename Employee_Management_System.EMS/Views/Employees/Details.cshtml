@model Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded p-4">

        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-info">
                <i class="bi bi-person-badge-fill me-2"></i> @Model.FullName
            </h2>
            <a class="btn btn-secondary shadow-sm" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="row">
            <div class="col-md-3 text-center">
                @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                {
                    <img src="@Model.ProfileImagePath" class="img-thumbnail shadow-sm rounded-circle" width="150" height="150" alt="profile" />
                }
                else
                {
                    <i class="bi bi-person-circle text-muted" style="font-size:120px;"></i>
                }
            </div>

            <div class="col-md-9">
                <dl class="row">
                    <dt class="col-sm-3 fw-semibold text-secondary">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3 fw-semibold text-secondary">Phone</dt>
                    <dd class="col-sm-9">@Model.PhoneNumber</dd>

                    <dt class="col-sm-3 fw-semibold text-secondary">Department</dt>
                    <dd class="col-sm-9"><span class="badge bg-warning text-dark">@Model.department?.Name</span></dd>

                    <dt class="col-sm-3 fw-semibold text-secondary">Job Title</dt>
                    <dd class="col-sm-9"><span class="badge bg-purple text-white">@Model.job?.Title</span></dd>

                    <dt class="col-sm-3 fw-semibold text-secondary">Hire Date</dt>
                    <dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>

                    <dt class="col-sm-3 fw-semibold text-secondary">Salary</dt>
                    <dd class="col-sm-9 fw-bold text-success">@Model.Salary.ToString("C")</dd>
                </dl>

                <div class="d-flex gap-2 mt-3">
                    <a class="btn btn-outline-purple shadow-sm" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a class="btn btn-danger shadow-sm" asp-action="Delete" asp-route-id="@Model.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
