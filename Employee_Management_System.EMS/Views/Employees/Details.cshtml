@model Employee
@{
   ViewData["Title"] = "Employee Details";
}

<div class="container mt-4">
   <div class="card shadow rounded-3 border-0">
      <!-- Header -->
      <div class="card-header bg-info text-white d-flex justify-content-between align-items-center py-3">
         <h4 class="mb-0 fw-bold">
            <i class="bi bi-person-badge-fill me-2"></i> @Model.FullName
         </h4>
         <a class="btn btn-light btn-sm shadow-sm" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back
         </a>
      </div>

      <div class="card-body">
         <div class="row g-4">
            <!-- Profile Image -->
            <div class="col-md-3 text-center">
               @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
               {
                  <div class="position-relative d-inline-block">
                     <img src="@Model.ProfileImagePath" class="shadow-lg rounded-circle border border-3 border-info"
                        style="width: 160px; height: 160px; object-fit: cover; transition: transform 0.3s;" alt="Profile"
                        onmouseover="this.style.transform='scale(1.05)'" onmouseout="this.style.transform='scale(1)'" />
                  </div>
               }
               else
               {
                  <div
                     class="d-flex justify-content-center align-items-center bg-light border border-2 border-secondary rounded-circle shadow-sm"
                     style="width: 160px; height: 160px;">
                     <i class="bi bi-person-circle text-muted" style="font-size:120px;"></i>
                  </div>
               }
            </div>

            <!-- Employee Info -->
            <div class="col-md-9">
               <dl class="row mb-0">
                  <dt class="col-sm-3 text-muted fw-semibold">Email</dt>
                  <dd class="col-sm-9">@Model.Email</dd>

                  <dt class="col-sm-3 text-muted fw-semibold">Phone</dt>
                  <dd class="col-sm-9">@Model.PhoneNumber</dd>

                  <dt class="col-sm-3 text-muted fw-semibold">Department</dt>
                  <dd class="col-sm-9">
                     <span class="badge bg-warning text-dark">@Model.department?.Name</span>
                  </dd>

                  <dt class="col-sm-3 text-muted fw-semibold">Job Title</dt>
                  <dd class="col-sm-9">
                     <span class="badge bg-purple">@Model.job?.Title</span>
                  </dd>

                  <dt class="col-sm-3 text-muted fw-semibold">Hire Date</dt>
                  <dd class="col-sm-9">@Model.HireDate.ToString("yyyy-MM-dd")</dd>

                  <dt class="col-sm-3 text-muted fw-semibold">Salary</dt>
                  <dd class="col-sm-9 fw-bold text-success">@Model.Salary.ToString("C")</dd>
               </dl>
            </div>
         </div>
      </div>

      <!-- Footer with Actions -->
      <div class="card-footer bg-light d-flex justify-content-end gap-2">
         <a class="btn btn-outline-info shadow-sm" asp-action="Edit" asp-route-id="@Model.Id">
            <i class="bi bi-pencil"></i> Edit
         </a>
         <a class="btn btn-danger shadow-sm" asp-action="Delete" asp-route-id="@Model.Id">
            <i class="bi bi-trash"></i> Delete
         </a>
      </div>
   </div>
</div>
<style>
   .bg-purple {
      background-color: #6f42c1 !important;
      /* Bootstrap Purple */
      color: #fff !important;
   }
</style>
