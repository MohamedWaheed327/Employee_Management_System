@model Employee_Management_System.EMS.Models.Employee

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Delete
            </h4>
            <a asp-action="Index" class="btn btn-sm btn-light">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body text-center">
            <h5 class="fw-bold text-dark">Are you sure you want to delete this employee?</h5>
            <p class="text-muted mb-4">
                <i class="bi bi-person-circle me-1"></i> 
                <strong>@Model.FullName</strong>
            </p>

            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4 shadow-sm me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>

            <a asp-action="Index" class="btn btn-secondary px-4 shadow-sm">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </div>
</div>
